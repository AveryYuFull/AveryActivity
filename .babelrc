{
  "presets": [
    ["env", {
      "modules": false,
      "targets": {
        "browsers": ["> 1%", "last 2 versions", "not ie <= 11"]
      }
    }],
    "stage-2"
  ],
  "plugins": [
    "transform-runtime",
    ["transform-modules", {
      "tiger-ui": {
        "transform": "tiger-ui/modules/${member}",
        "preventFullImport": true,
        "style": true
      },
      "tiger-lib": {
        "transform": "tiger-lib/modules/${member}",
        "preventFullImport": true,
        "style": false
      }
    }]
  ],
  "env": {
    "test": {
      "presets": ["env", "stage-2"],
      "plugins": ["istanbul"]
    }
  }
}
